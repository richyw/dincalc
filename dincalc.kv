#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManagement:
    transition: SlideTransition()
    MainScreen:
    ChartScreen:

<MainScreen>:
    name: 'main'

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.2235,0.4745,0.4902,1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            font_size: '48dp'
            size_hint: 0.6, 0.15
            pos_hint: {'center_x':0.5, 'center_y':0.9}
            text: 'Din Calculator'

        GridLayout:
            id: inputgrid
            cols: 2
            size_hint: 0.8,0.33
            pos_hint: {'center_x':0.5, 'center_y':0.7}
            padding: ['2dp','2dp','2dp','2dp']
            spacing: ['2dp','2dp']

            canvas.before:
                Color:
                    rgba: 0.3451,0.3451,0.3451,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                font_size: '24sp'
                size_hint: 0.4,0.15
                text: "Weight"

            TextInput:
                id: weight_input
                font_size: '24sp'
                size_hint: 0.4,0.15
                input_filter: 'int'
                on_text: root.getWeight(args[1])

            Label:
                font_size: '24sp'
                size_hint: 0.4,0.15
                text: "Height"

            TextInput:
                id: height_input
                font_size: '24sp'
                size_hint: 0.4,0.15
                input_filter: 'int'
                on_text: root.getTall(args[1])

            Label:
                font_size: '24sp'
                size_hint: 0.4,0.15
                text: "Age"

            TextInput:
                id: age_input
                font_size: '24sp'
                size_hint: 0.4,0.15
                input_filter: 'int'
                on_text: root.getAge(args[1])

            Label:
                font_size: '24sp'
                size_hint: 0.4,0.15
                input_filter: 'int'
                text: "BSL"

            TextInput:
                id: boot_length_input
                font_size: '24sp'
                size_hint: 0.4,0.15
                on_text: root.getBootLength(args[1])

            Label:
                font_size: '24sp'
                size_hint: 0.4,0.15
                text: "Ability"

            BoxLayout:
                size_hint: 0.4,0.15
                orientation: 'horizontal'
                ToggleButton:
                    group: 'skiertype'
                    text: "-1"
                    on_press: root.getSkierType("-1")
                ToggleButton:
                    group: 'skiertype'
                    text: "1"
                    on_press: root.getSkierType(1)
                ToggleButton:
                    group: 'skiertype'
                    text: "2"
                    on_press: root.getSkierType(2)
                ToggleButton:
                    group: 'skiertype'
                    text: "3"
                    on_press: root.getSkierType(3)
                ToggleButton:
                    group: 'skiertype'
                    text: "3+"
                    on_press: root.getSkierType("3+")

        Button:
            id: windowbutton
            on_release: app.root.current = 'chart'
            text: "Chart"
            pos_hint: {'center_x':.5, 'center_y': .1}
            size_hint: 0.5,0.1
            font_size: '36dp'

        Button:
            id: dinvalue
            on_release: root.calculate_din()
            text: root.din_setting
            pos_hint: {'center_x':.5, 'center_y': .4}
            size_hint: 0.3,0.2
            font_size: '64sp'

<ChartScreen>:
    name: 'chart'

    Button:
        on_release: app.root.current = 'main'
        text: 'Main Screen'
        pos_hint: {'center_x':.5, 'center_y': .1}
        size_hint: 0.5,0.1
        font_size: '36dp'
